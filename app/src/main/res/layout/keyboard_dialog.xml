<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/binary_line_layout_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wbj_keyboard_1"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_1" />

        <ImageButton
            android:id="@+id/wbj_keyboard_2"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_2" />

        <ImageButton
            android:id="@+id/wbj_keyboard_3"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_3" />

        <ImageButton
            android:id="@+id/wbj_keyboard_up"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wbj_keyboard_4"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_4" />

        <ImageButton
            android:id="@+id/wbj_keyboard_5"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_5" />

        <ImageButton
            android:id="@+id/wbj_keyboard_6"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_6" />

        <ImageButton
            android:id="@+id/wbj_keyboard_left"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wbj_keyboard_7"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_7" />

        <ImageButton
            android:id="@+id/wbj_keyboard_8"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_8" />

        <ImageButton
            android:id="@+id/wbj_keyboard_9"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_9" />

        <ImageButton
            android:id="@+id/wbj_keyboard_down"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wbj_keyboard_0"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_0" />

        <ImageButton
            android:id="@+id/wbj_keyboard_delete"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_delete" />

        <ImageButton
            android:id="@+id/wbj_keyboard_right"
            style="@style/KeyboardBtn"
            android:background="@drawable/key_right" />
    </LinearLayout>
</LinearLayout>